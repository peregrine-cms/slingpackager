#!/usr/bin/env node

require('yargs')
  .commandDir('../cmds')
  .demandCommand()
  .help()
  .options({
    server: {
      alias: 's',
      default: 'http://localhost:8080',
      describe: 'server url'
    },
    user: {
      alias: 'u',
      default: 'admin:admin',
      describe: 'server credentials in the form username:password'
    },
    verbose: {
      alias: 'v',
      describe: 'turn on verbose output'
    }
  })
  .argv